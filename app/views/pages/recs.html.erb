    <%= cl_image_tag product.image_url, class: "wf-box", style: "border-top-left-radius:20px;border-top-right-radius:20px" %>
  <% end %>
<% end %>


  <script type="text/javascript">
    // use querySelector/querySelectorAll internally
    var waterfall = new Waterfall({
        containerSelector: '.wf-container',
        boxSelector: '.wf-box',
        minBoxWidth: 250
    });
  </script>

