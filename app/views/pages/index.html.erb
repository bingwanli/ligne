  <script type="text/javascript">
    // Get the container to hold the IO globe
    const container = document.getElementById( "globalArea" );
    // Create Gio.controller
    let controller = new GIO.Controller( container );
    // Add data
    controller.setTransparentBackground(true);
    controller.addData( data );
    // Initialize and render the globe
    controller.init();
    controller.clearData();
    // enable auto-rotation, 1 is the default speed.
    controller.setAutoRotation( true, 1 );
    controller.setSelectedColor("#fcfcfc");
    controller.adjustOceanBrightness(0.0);
    // use the onCountryPicked() to set callback when clicked country changed
    controller.onCountryPicked( callback );

    function disableRotate() {
      controller.setAutoRotation(false);
    }

    container.addEventListener('click', disableRotate)


