<h1>Add a new product for <%= @brand.name %></h1>

<!-- form -->

  <div class="user-form-container">
    <%= simple_form_for [@brand, @product] do |f| %>
      <%= f.input :name, { maxlength: 100 }%>
      <%= f.input :price %>
      <%= f.input :description, { maxlength: 500 } %>
      <%= f.input :url %>
      <%= f.file_field :image_url %>
      <p>
        <%= f.submit "Add", class: "btn" %>
      </p>
    <% end %>
  </div>
</div>

