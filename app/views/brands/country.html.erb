<body>
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

  <div class="wf-container">
    <div class="page-title" style="text-align:center">
      <div>
        <h2><%= params[:query] %> BRANDS</h2>
        <h5>Find out what's new</h5>
      </div>
    </div>
    <div class="country-btn">
      <%= link_to "BACK", :back, class: "filter-btn" %>
      <%= link_to "GO TO...", brands_path, class: "filter-btn" %>
    </div>
    <% @brands.each do |brand| %>
      <% brand.brand_images.each do |image| %>
        <div class="wf-box" data-aos="fade-right">
          <%= cl_image_tag image.url, style: "border-radius:20px;" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <script src="app/assets/javascripts/responsive_waterfall.js"></script>


  <script type="text/javascript">
    // use querySelector/querySelectorAll internally
    var waterfall = new Waterfall({
        containerSelector: '.wf-container',
        boxSelector: '.wf-box',
        minBoxWidth: 250
    });
  </script>

<script src="app/assets/javascripts/responsive_waterfall.js"></script>

</body>

