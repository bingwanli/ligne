<body>

  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <div class="picks-scroll">
      <a href="/pages/recs" class="recs-button picks-for-you-btn"  title="" data-aos="fade-right">Picks For You</a>
    </div>
  <div class="wf-container">
    <div class="collapse-nav">
      <%= render "devise/shared/navbar" %>
    </div>
    <div class="page-title" style="text-align:center">
      <div>
        <h2><%= params[:query] %> BRANDS</h2>
        <h5>Choose Your Favorites</h5>
      </div>
    </div>
    <% @brands.each do |brand| %>
      <% brand.brand_images.each do |image| %>
        <div class="wf-box" data-aos="fade-right">
          <div class="heart" data-aos="fade-right">
            <div class="wrapper">
              <%= link_to brand_brand_image_path(brand, image), method: :patch, class: "like-button" do%>
                <i class="mdc-icon-button material-icons is-liked bouncy">favorite</i>
                <i class="mdc-icon-button material-icons not-liked bouncy">favorite_border</i>
                <span class="like-overlay"></span>
              <% end %>
            </div>
          </div>
          <%= cl_image_tag image.url, style: "border-radius:20px;" %>
        </div>
      <% end %>
    <% end %>
  </div>




