<body>

  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
      <a href="/pages/recs" class="recs-button filter-btn"  title="" data-aos="fade-right">Picks For You</a>
  <div class="wf-container">
    <div class="collapse-nav">
      <%= render "devise/shared/navbar" %>
    </div>
    <div class="page-title" style="text-align:center">
      <div>
        <h2><%= params[:query] %> BRANDS</h2>
        <h5>Choose Your Favorites</h5>
      </div>
    </div>

    <% @randomized_images.each do |image| %>
      <div class="wf-box" data-aos="fade-right">
        <div class="heart" data-aos="fade-right">
          <div class="wrapper">
            <%= link_to brand_brand_image_path(image.brand, image), method: :patch, class: "like-button" do%>
              <i class="mdc-icon-button material-icons is-liked bouncy">favorite</i>
              <i class="mdc-icon-button material-icons not-liked bouncy">favorite_border</i>
              <span class="like-overlay"></span>
            <% end %>
          </div>
        </div>
        <%= cl_image_tag image.url, style: "border-radius:20px;" %>
      </div>
    <% end %>

<!-- button popup -->
<script type="text/javascript">
  $(window).scroll(function () {
  if ($(window).scrollTop() > $('body').height() / 0.5) {
    $('.recs-button').addClass('recs-hi');
  }
    if ($(window).scrollTop() < $('body').height() / 2) {
    $('.recs-button').removeClass('recs-hi');
  }
});
</script>

<!-- like button -->
<script type="text/javascript">
  $(document).ready(function(){

    $('.like-button').click(function(){
        $(this).toggleClass('is-active');
    })

})
</script>
  <script src="app/assets/javascripts/responsive_waterfall.js"></script>
  <script type="text/javascript">
    // use querySelector/querySelectorAll internally
    var waterfall = new Waterfall({
        containerSelector: '.wf-container',
        boxSelector: '.wf-box',
        minBoxWidth: 250
    });
  </script>


</body>

